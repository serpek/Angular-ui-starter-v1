{
    "extends": "eslint:recommended",
    "globals": {
        "angular": true,
        "dx": true,
        "$": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "amd": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        // enable additional rules
        //"indent": ["error", 2],
        "no-debugger": 0
    }
}